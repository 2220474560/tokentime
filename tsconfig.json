{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "compilerOptions": {
    "target": "es5",  // 目标JavaScript版本
    "module": "es6",  // 模块类型
    "strict": true,  // 启用严格的类型检查
    "esModuleInterop": true,  // 支持导入Vue组件的默认导出语法
    "resolveJsonModule": true,  // 支持导入JSON文件
    "jsx": "preserve",  // 保留JSX代码
    "moduleResolution": "node",  // 模块解析策略
    "experimentalDecorators": true,  // 启用实验性的装饰器语法
    "allowSyntheticDefaultImports": true,  // 允许默认导入非默认导出模块
    "noImplicitAny": false,  // 不允许隐式的any类型
    "strictNullChecks": false,  // 不启用严格的null检查
    "baseUrl": "./src",  // 基本目录路径
  },
  "exclude": [
    "node_modules"  // 排除目录
  ]
}
 
